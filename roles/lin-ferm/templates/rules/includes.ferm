# Include Sub-Hooks
# core rule

domain $ip_all table filter chain INPUT {
    @include @glob('../input/*.ferm');
}

domain $ip_all table filter chain FORWARD {
    @include @glob('../forward/*.ferm');
}

domain $ip_all table filter chain ferm-int-hosts {
    @include @glob('../internal/*.ferm');
}

domain $ip_all table filter chain ferm-ext-hosts {
    @include @glob('../external/*.ferm');
}
