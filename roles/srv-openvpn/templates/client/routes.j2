{% if has_subnet4 %}
ifconfig-push {{ client_subnet4 |ipaddr('address') }} {{ client_subnet4 |ipaddr('netmask') }}
{% endif %}
{% if has_subnet6 %}
ifconfig-ipv6-push {{ client_subnet6 }}
{% endif %}
{% for route4 in self_routes4 %}
iroute {{ route4 |ipaddr('network') }} {{ route4 |ipaddr('netmask') }}
{% endfor %}
{% for route6 in self_routes6 %}
iroute-ipv6 {{ route6 }}
{% endfor %}
{% for route4 in push_routes4 %}
push "route {{ route4 |ipaddr('network') }} {{ route4 |ipaddr('netmask') }}{% if has_metric %} default {{ metric }}{% endif %}"
{% endfor %}
{% for route6 in push_routes6 %}
push "route-ipv6 {{ route6 }}"
{% endfor %}
{% if client_redirect_gateway %}
push "redirect-gateway def1{{ ' ipv6' if has_subnet6 else '' }}"
{% endif %}
{% if has_config %}
{{ config.strip() }}
{% endif %}
