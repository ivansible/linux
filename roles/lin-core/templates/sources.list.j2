{% set mirror = "http://mirror.yandex.ru/ubuntu/" %}
{% set release = ansible_distribution_release %}
{% set src_ok = linbase_apt_allow_src | bool %}
{% if linbase_apt_allow_universe | bool %}
{% set channels = "main restricted universe multiverse" %}
{% else %}
{% set channels = "main restricted" %}
{% endif %}
# created by ansible

{% for branch in ['', '-updates', '-security'] %}
deb {{mirror}} {{release}}{{branch}} {{channels}}
{% if src_ok %}
deb-src {{mirror}} {{release}}{{branch}} {{channels}}
{% endif %}

{% endfor %}
{% if linbase_apt_allow_backports | bool %}
deb {{mirror}} {{release}}-backports {{channels}}
{% if src_ok %}
deb-src {{mirror}} {{release}}-backports {{channels}}
{% endif %}
{% endif %}
